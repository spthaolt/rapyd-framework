


  <ul class="pagination">
{% if first_page %}

  <li><a href="{{ url|replace({'-pag-':1}) }}">&lsaquo;&nbsp;first{# rpd::lang('pag.first') #}</a></li>
{% endif %}
{% if previous_page %}
  <li><a href="{{ url|replace({'-pag-': previous_page }) }}">&lt;</a></li>
{% endif %}

{% for i in nav_start..nav_end %}

    {% if  i == current_page %} {#nav_start..nav_end#}
      <li class="active"><a href="#">{{ i }}</a></li>
    {% else %}
      <li><a href="{{ url|replace({'-pag-': i }) }}">{{ i }}</a></li>
    {% endif %}
{% endfor %}
{% if next_page %}
  <li><a href="{{ url|replace({'-pag-': next_page }) }}">&gt;</a></li>
{% endif %}
{% if last_page %}
  <li><a href="{{ url|replace({'-pag-': last_page }) }}">{# echo rpd::lang('pag.last')#} &nbsp;last &rsaquo;</a></li>
{% endif %}
  </ul>
